.all{
  margin-top: 10rpx;
}

.bar{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin:30rpx 10rpx;
  align-items: center;
}

.img{
  width:70rpx;
  height:70rpx;
}

.today{
  font-size: 45rpx;
  text-align: center;
}

.box {
  border-radius: 15rpx;
  background:#acd;
  margin:20rpx 10rpx
}

.weekTitle{
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
}

.weekItem{
  margin-top: 15rpx;
  width:100rpx;
  font-weight: bolder;
  text-align: center;
  height:50rpx;
}
.dayContent{
  width:100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  flex-direction: row;
}

.dayItem{
  width:80rpx;
  height:80rpx;
  line-height: 80rpx;
  margin:10rpx 10rpx;
  text-align: center;
  border-radius: 50%;
  position: relative;
}


.image {
  width: 100%;
  height:100%;
  margin: 12rpx 2rpx 2rpx 2rpx;
}

.text {
  width: 80rpx;
  height: 80rpx;  
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  text-align: center;
}  
.textToday{ 
  width: 80rpx;
  height: 80rpx;  
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  text-align: center;
  color: red;
  font-weight: bold;
}
